<h1>Listing sprints</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Date init</th>
    <th>Date end</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @sprints.each do |sprint| %>
  <tr>
    <td><%= sprint.name %></td>
    <td><%= sprint.date_init %></td>
    <td><%= sprint.date_end %></td>
    <td><%= link_to 'Show', :controller => 'tasks', :action => :kanban, :id => sprint.id %></td>
    <td><%= link_to 'Edit', edit_sprint_path(sprint) %></td>
    <td><%= link_to 'Destroy', sprint, :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

