<h1>Listing tasks</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Color</th>
    <th>Priority</th>
    <th>Date init</th>
    <th>Date end</th>
    <th>Obs</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%= task.name %></td>
    <td><%= task.color %></td>
    <td><%= task.priority %></td>
    <td><%= task.date_init %></td>
    <td><%= task.date_end %></td>
    <td><%= task.obs %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task, :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

