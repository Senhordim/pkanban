<%= form_for(@task) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :Sprint_id, :value => @sprint_id %>

  <% if params[:action] == 'new'%>
    <%= f.hidden_field :column, :value => '1.0' %>
  <% end %>

  <div class="field">
    <%= f.label :nome %><br />
    <%= f.text_field :name %>
  </div>
  <%= f.hidden_field :color, :value => '#f1f1f1' %>
  <div class="field">
    <%= f.label :prioridade %><br />
    <%= select_tag "task[priority]", options_for_select([ "1.0", "3.0", "5.0", "8.0" ], @task.priority) %>
  </div>
  <div class="field">
    <%= f.label :data_inicial %><br />
    <%= f.date_select :date_init %>
  </div>
  <div class="field">
    <%= f.label :data_final %><br />
    <%= f.date_select :date_end %>
  </div>
  <div class="actions">
    <%= f.submit 'salvar', :class => 'btn btn-form' %>
    <%= link_to_function 'voltar', 'history.back()', :class => 'btn btn-form' %>
  </div>
<% end %>
